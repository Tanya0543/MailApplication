@model MailApplication.Models.UserModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm())
{
    @Html.ValidationSummary(true,"Login Failed, check you User or Password")
    <div>
        <fieldset>
            <legend>Login Form</legend>
            <div class="Required">@Html.LabelFor(u=>u.Email)</div>
            <div class="k-textbox">@Html.TextBoxFor(u=>u.Email)</div>
            @Html.ValidationMessageFor(u=>u.Email) <!-- Allows to show the Validations Messages created in the view -->

            <div class="Required">@Html.LabelFor(u=>u.Password)</div>
            <div class="k-textbox">@Html.PasswordFor(u=>u.Password)</div>
            @Html.ValidationMessageFor(u=>u.Password) <!-- Allows to show the Validations Messages created in the view -->
            
            <div>
                <input  class="k-button"  type ="submit" value="LogIn" />
            </div>
        </fieldset>
    </div>
}
